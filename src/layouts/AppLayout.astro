---
import "@/styles/global.css";
import { AppShell } from "@/components/AppShell";
import { Toaster } from "@/components/ui/sonner";
import { ClientRouter } from "astro:transitions";

interface Props {
  title?: string;
}

const { title = "Parking Manager" } = Astro.props;
const { pathname } = Astro.url;

// Extract locationId from URL if present
const segments = pathname.split("/").filter(Boolean);
const locationsIndex = segments.indexOf("locations");
const currentLocationId =
  locationsIndex !== -1 && segments.length > locationsIndex + 1
    ? segments[locationsIndex + 1]
    : undefined;

// Basic Breadcrumbs Generation
const breadcrumbs = segments.map((segment, index) => {
  const href = "/" + segments.slice(0, index + 1).join("/");
  // Capitalize first letter
  const label = segment.charAt(0).toUpperCase() + segment.slice(1);
  return { label, href };
});
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="min-h-screen font-sans antialiased bg-background">
    <AppShell
      client:load
      currentLocationId={currentLocationId}
      currentPath={pathname}
      breadcrumbs={breadcrumbs}
    >
      <slot />
    </AppShell>
    <Toaster client:idle />
  </body>
</html>
